{
  "functions": {
    "source": "packages/functions",
    "predeploy": "yarn --ignore-engines --cwd \"packages/functions\" build"
  },
  "hosting": {
    "public": "packages/ui/build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "predeploy": "yarn --cwd \"packages/ui\" build",
    "headers": [
      {
        "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      },
      {
        "source": "**/*.@(jpg|jpeg|gif|png|svg)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=7200"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "!/@(js|css|jpg|jpeg|gif|png|svg)/**",
        "destination": "/index.html"
      }
    ],
    "cleanUrls": true,
    "trailingSlash": false
  }
}
